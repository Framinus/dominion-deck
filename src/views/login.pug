extends base.pug

block content
  div.loginpagetitle
    h2 Welcome back!
    h4 Log in to pick a game and see your history
    div.auth-container
      div.auth-form-container
        h2 Log In!
        form(action='/login' method='POST')
          div.form-group
            label.label email
            input(name='email' type='text' placeholder='Email' id='loginemail')
          div.form-group
            label.label password
            input(name='password' type='password' placeholder='password' id='loginpassword')
          button#loginbutton(type='submit') Log In
    a(href='/signup')
      button.other-auth-link(type='button') Go to Signup
